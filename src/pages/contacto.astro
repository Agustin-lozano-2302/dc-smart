---
import '../styles/global.css';
import content from '../content/siteContent.json';
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';

const page = content.pages.contacto;
const footer = content.site.footer;

const whatsappNumber = footer.phone.replace(/\D/g, '');
const whatsappHref = `https://wa.me/${whatsappNumber}`;
const mapsHref = "https://maps.app.goo.gl/tMC4V2xubBq2kWdJ9";
---

<html lang="es">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="description" content="Contactá con DC Management" />
		<title>{page.meta.title} - DC Management</title>
	</head>
	<body>
		<section class="relative min-h-screen" style="background: linear-gradient(to bottom, #1a2535, #334355);">
			<Nav currentPage="contacto" />

			<div class="max-w-7xl mx-auto px-4 sm:px-8 md:px-16 py-12 md:py-20">
				<div class="grid lg:grid-cols-2 gap-8 md:gap-16 items-center">
					<!-- Info -->
					<div>
						<h1 class="text-4xl sm:text-6xl md:text-8xl font-bold italic text-[#c9b086]  mb-4 ml-[-30px] md:mb-6 tracking-wide">CONTACTO</h1>
						<p class="text-white/80 text-base md:text-lg mb-8 md:mb-12">Estamos para ayudarte. Contactanos y te responderemos a la brevedad.</p>

						<div class="space-y-4 md:space-y-6">
							<!-- Dirección -->
							<a href={mapsHref} target="_blank" rel="noopener noreferrer" class="flex items-start gap-3 md:gap-4 p-3 md:p-4 rounded-xl bg-white/5 border border-white/10 hover:bg-white/10 transition-colors group">
								<div class="w-10 h-10 md:w-12 md:h-12 rounded-full bg-white/10 flex items-center justify-center flex-shrink-0">
									<svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
										<path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"/>
									</svg>
								</div>
								<div>
									<h3 class="text-white font-semibold mb-1">Dirección</h3>
									<p class="text-white/60 group-hover:text-white/80 transition-colors">{footer.address}</p>
								</div>
							</a>

							<!-- WhatsApp -->
							<a href={whatsappHref} target="_blank" rel="noopener noreferrer" class="flex items-start gap-3 md:gap-4 p-3 md:p-4 rounded-xl bg-white/5 border border-white/10 hover:bg-white/10 transition-colors group">
								<div class="w-10 h-10 md:w-12 md:h-12 rounded-full bg-white/10 flex items-center justify-center flex-shrink-0">
									<svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
										<path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
									</svg>
								</div>
								<div>
									<h3 class="text-white font-semibold mb-1">WhatsApp</h3>
									<p class="text-white/60 group-hover:text-white/80 transition-colors">{footer.phone}</p>
								</div>
							</a>

							<!-- Email -->
							<button id="copy-email-btn" data-email={footer.email} class="w-full flex items-start gap-3 md:gap-4 p-3 md:p-4 rounded-xl bg-white/5 border border-white/10 hover:bg-white/10 transition-colors group text-left cursor-pointer">
								<div class="w-10 h-10 md:w-12 md:h-12 rounded-full bg-white/10 flex items-center justify-center flex-shrink-0">
									<svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
										<path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/>
									</svg>
								</div>
								<div>
									<h3 class="text-white font-semibold mb-1">Email</h3>
									<p class="text-white/60 group-hover:text-white/80 transition-colors">{footer.email}</p>
								</div>
							</button>
						</div>

						<!-- CTA WhatsApp -->
						
					</div>

					<!-- Mapa de Google Maps -->
					<div class="mt-8 lg:mt-0">
						<div class="relative">
							<div class="absolute inset-0 bg-gradient-to-br from-blue-500/20 to-purple-500/20 rounded-3xl blur-3xl"></div>
							<div class="relative bg-white/5 backdrop-blur-sm border border-white/10 rounded-3xl overflow-hidden aspect-square">
								<iframe 
									src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3285.5246015366292!2d-58.43991509999999!3d-34.5655903!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x95bcb5ddea7f088b%3A0x4c3b30348c9a1315!2sDC%20Management!5e0!3m2!1ses!2sar!4v1767678943775!5m2!1ses!2sar"
									width="100%" 
									height="100%" 
									style="border:0;" 
									allowfullscreen="" 
									loading="lazy" 
									referrerpolicy="no-referrer-when-downgrade"
									class="absolute inset-0">
								</iframe>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>

		<Footer />

		<script>
			// Copy email to clipboard
			const copyEmailBtn = document.getElementById('copy-email-btn');
			if (copyEmailBtn) {
				copyEmailBtn.addEventListener('click', async () => {
					const email = copyEmailBtn.getAttribute('data-email');
					if (email) {
						await navigator.clipboard.writeText(email);
						
						// Create toast notification
						const toast = document.createElement('div');
						toast.textContent = 'Mail copiado en el portapapeles';
						toast.style.cssText = 'position:fixed;bottom:20px;left:50%;transform:translateX(-50%);background:#1f2937;color:white;padding:12px 24px;border-radius:8px;font-size:14px;z-index:9999;opacity:0;transition:opacity 0.3s;';
						document.body.appendChild(toast);
						
						setTimeout(() => toast.style.opacity = '1', 10);
						setTimeout(() => {
							toast.style.opacity = '0';
							setTimeout(() => toast.remove(), 300);
						}, 2000);
					}
				});
			}
		</script>
	</body>
</html>
