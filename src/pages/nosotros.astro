---
import '../styles/global.css';
import content from '../content/siteContent.json';
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';

const page = content.pages.nosotros;

const allMembers = [
	...page.featured,
	...page.legales,
	...page.team.filter((p: any) => p.name)
];
---

<html lang="es">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="description" content="Conocé al equipo de DC Management" />
		<title>{page.meta.title} - DC Management</title>
	</head>
	<body>
		<section class="relative" style="background: linear-gradient(to bottom, #1a2535, #334355);">
			<Nav currentPage="nosotros" />

			<div class="max-w-7xl mx-auto px-4 sm:px-8 md:px-16 py-12 md:py-20">
				<h1 class="text-4xl sm:text-6xl md:text-8xl font-bold italic text-[#c9b086] mb-4 md:mb-6 tracking-wide animate-fade-in-up">NOSOTROS</h1>
				<p class="text-white/80 text-lg max-w-2xl animate-fade-in-up delay-200" style="opacity: 0; animation-fill-mode: forwards;">{page.intro}</p>
			</div>
		</section>

		<main class="bg-white">
			<!-- Sección Principal - Dirección -->
			<section class="py-10 md:py-16 bg-gray-50">
				<div class="max-w-7xl mx-auto px-4 sm:px-8 md:px-16">
					<div class="grid md:grid-cols-2 gap-8 max-w-3xl mx-auto">
						{page.featured.map((person: any, index: number) => (
							<div class="text-center scroll-animate-scale team-card" data-delay={index * 150}>
								<div class="w-32 h-32 md:w-40 md:h-40 mx-auto overflow-hidden rounded-full bg-gray-200 shadow-lg mb-4 hover:shadow-xl transition-all duration-300 hover:scale-105">
									{person.imageSrc ? (
										<img src={person.imageSrc} alt={person.name} class="w-full h-full object-cover" />
									) : (
										<div class="w-full h-full flex items-center justify-center text-gray-400 text-4xl font-bold">
											{person.name.charAt(0)}
										</div>
									)}
								</div>
								<h3 class="text-xl font-bold text-[#c9b086]">{person.name}</h3>
								<p class="text-[#c9b086]">{person.role}</p>
							</div>
						))}
					</div>
				</div>
			</section>

			<!-- Equipo Legal -->
			<section class="py-10 md:py-16 bg-white">
				<div class="max-w-7xl mx-auto px-4 sm:px-8 md:px-16">
					<div class="flex items-center justify-center gap-4 mb-8 md:mb-12 scroll-animate">
						<img src="/images/logos/logo-largo-sin-fondo.webp" alt="DC Legales" class="h-24 md:h-36 object-contain" />
					</div>
					<div class="grid md:grid-cols-3 gap-8">
						{page.legales.map((person: any, index: number) => (
							<div class="text-center scroll-animate-scale team-card" data-delay={index * 150}>
								<div class="w-32 h-32 md:w-40 md:h-40 mx-auto overflow-hidden rounded-full bg-gray-200 shadow-lg mb-4 hover:shadow-xl transition-all duration-300 hover:scale-105">
									{person.imageSrc ? (
										<img src={person.imageSrc} alt={person.name} class="w-full h-full object-cover" />
									) : (
										<div class="w-full h-full flex items-center justify-center text-gray-400 text-4xl font-bold">
											{person.name.charAt(0)}
										</div>
									)}
								</div>
								<h3 class="text-xl font-bold text-[#c9b086]">{person.name}</h3>
								<p class="text-[#c9b086]">{person.role}</p>
							</div>
						))}
					</div>
				</div>
			</section>

			<div class="max-w-7xl mx-auto px-4 sm:px-8 md:px-16 py-10 md:py-16">

				<!-- Equipo -->
				<section>
					<h2 class="text-2xl md:text-3xl font-bold text-[#c9b086] mb-6 md:mb-10 scroll-animate">{page.teamTitle}</h2>
					<div class="grid sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
						{page.team.filter((p: any) => p.name).map((person: any, index: number) => (
							<div class={`text-center p-4 md:p-6 bg-gray-50 rounded-2xl scroll-animate-scale team-card hover:shadow-lg transition-all duration-300 hover:-translate-y-1 ${person.name === 'Agustin Lozano' ? 'hover:shadow-2xl hover:shadow-yellow-400/50' : ''}`} data-delay={index * 100}>
								<div class={`w-28 h-28 md:w-40 md:h-40 rounded-full overflow-hidden mx-auto mb-4 bg-gray-200 shadow-lg hover:shadow-xl transition-all duration-300 ${person.name === 'Agustin Lozano' ? 'hover:ring-4 hover:ring-yellow-400 hover:scale-110' : ''}`}>
									{person.imageSrc ? (
										<img src={person.imageSrc} alt={person.name} class={`w-full h-full object-cover hover:scale-110 transition-transform duration-300 ${person.name === 'Agustin Lozano' ? 'hover:brightness-125 hover:contrast-110' : ''}`} />
									) : (
										<div class="w-full h-full flex items-center justify-center text-gray-400 text-4xl font-bold">
											{person.name.charAt(0)}
										</div>
									)}
								</div>
								<h3 class={`text-xl font-bold text-[#c9b086] ${person.name === 'Agustin Lozano' ? 'hover:text-yellow-400 transition-colors duration-300' : ''}`}>{person.name}</h3>
								<p class={`text-[#c9b086] ${person.name === 'Agustin Lozano' ? 'hover:text-yellow-300 transition-colors duration-300' : ''}`}>{person.role}</p>
							</div>
						))}
					</div>
				</section>
			</div>
		</main>

		<Footer />

		<script>
			// Scroll animations with stagger
			const observerOptions = {
				threshold: 0.1,
				rootMargin: '0px 0px -50px 0px'
			};

			const scrollObserver = new IntersectionObserver((entries) => {
				entries.forEach(entry => {
					if (entry.isIntersecting) {
						const delay = parseInt(entry.target.getAttribute('data-delay') || '0');
						setTimeout(() => {
							entry.target.classList.add('visible');
						}, delay);
						scrollObserver.unobserve(entry.target);
					}
				});
			}, observerOptions);

			document.querySelectorAll('.scroll-animate, .scroll-animate-scale, .scroll-animate-left, .scroll-animate-right').forEach(el => {
				scrollObserver.observe(el);
			});
		</script>
	</body>
</html>
