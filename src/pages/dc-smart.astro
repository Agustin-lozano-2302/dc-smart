---
 import BaseLayout from '../layouts/BaseLayout.astro';
 import content from '../content/siteContent.json';

 const page = content.pages.dcSmart;
---

<BaseLayout title={page.meta.title}>
	<h1>{page.hero.title}</h1>
	<p>{page.hero.intro}</p>

	<section>
		<h2>{page.proposal.title}</h2>
		<p>{page.proposal.body}</p>
	</section>

	<section>
		{page.pillars.items.map((item) => (
			<article>
				<h2>{item.title}</h2>
				<p>{item.body}</p>
			</article>
		))}
	</section>

	<section>
		<h2>{page.tools.title}</h2>
		<p>{page.tools.body}</p>
		{page.tools.ctaHref && page.tools.ctaLabel ? (
			<p>
				<a href={page.tools.ctaHref} target="_blank" rel="noopener noreferrer">
					{page.tools.ctaLabel}
				</a>
			</p>
		) : null}
	</section>

	{page.deliverables.body ? (
		<section>
			<h2>{page.deliverables.title}</h2>
			<p>{page.deliverables.body}</p>
		</section>
	) : null}

	<section>
		<h2>{page.about.title}</h2>
		<p>{page.about.body}</p>
		{page.about.team.map((m) => (
			<div>
				<strong>{m.name}</strong> - {m.role}
			</div>
		))}
	</section>
</BaseLayout>
