---
import content from '../content/siteContent.json';

const footer = content.site.footer;

const whatsappNumber = footer.phone.replace(/\D/g, '');
const whatsappHref = `https://wa.me/${whatsappNumber}`;
const mapsHref = "https://maps.app.goo.gl/tMC4V2xubBq2kWdJ9";
---

<footer class="bg-[#334255] text-white py-16">
	<div class="max-w-7xl mx-auto px-16">
		<div class="grid md:grid-cols-4 gap-12 mb-12">
			<div class="md:col-span-2">
				<div class="flex items-center gap-3 mb-6">
					<img src="/images/logos/logo-largo-con-fondo.webp" alt="DC Smart" class="h-[120px] w-auto" />
				</div>
			</div>

			<div>
				<h4 class="text-white font-semibold mb-6">Navegación</h4>
				<ul class="space-y-3">
					<li><a href="/" class="text-white/60 hover:text-white transition-colors">Inicio</a></li>
					<li><a href="/nosotros" class="text-white/60 hover:text-white transition-colors">Nosotros</a></li>
					<li><a href="/#servicios" class="text-white/60 hover:text-white transition-colors">Servicios</a></li>
					<li><a href="/contacto" class="text-white/60 hover:text-white transition-colors">Contacto</a></li>
				</ul>
			</div>

			<div>
				<h4 class="text-white font-semibold mb-6">Contacto</h4>
				<ul class="space-y-3">
					<li class="flex items-center gap-2 text-white/60">
						<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
						</svg>
						<a href={mapsHref} target="_blank" rel="noopener noreferrer" class="hover:text-white transition-colors">{footer.address}</a>
					</li>
					<li class="flex items-center gap-2 text-white/60">
						<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
						</svg>
						{footer.phone}
					</li>
					<li class="flex items-center gap-2 text-white/60">
						<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
						</svg>
						<a href={whatsappHref} target="_blank" rel="noopener noreferrer" class="hover:text-white transition-colors">Contactanos</a>
					</li>
				</ul>
			</div>
		</div>
		<div class="border-t border-white/10 pt-8 flex flex-col md:flex-row justify-between items-center gap-4">
			<p class="text-white/40 text-sm">© 2024 DC Management. Todos los derechos reservados.</p>
			<p class="text-white/40 text-sm">Diseñado y desarrollado por Agustín Lozano</p>
		</div>
	</div>
</footer>
